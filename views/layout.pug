                        //- i.material-icons.right(style="line-height: 40px;") search 

                else
                    section.top-bar
                        ul(id="dropdown1" class="dropdown-content")
                            li
                                a(href="/login")  Login
                                a(href="/register") Register
       
                        i.material-icons(id="profile") account_circle 
                        a(class="dropdown-button name" href="#!" data-activates="dropdown1") My account
