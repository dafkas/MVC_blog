        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")


        meta(name='viewport', content='width=device-width', initial-scale=1)
    body
        block header
            section.header(id="header-fixed") 
                if user
                    section.top-bar
                        ul(id="dropdown1" class="dropdown-content")
                            li
                                if(user.role == 'admin') 
                                    a(href="/admin/panel") Admin panel
                                a(href="/dashboard") Dashboard
                                a(href="/logout") Logout
       
                        i.material-icons(id="profile") account_circle 
                        a(class="dropdown-button name" data-activates="dropdown1") #{user.name}
                            i(class="material-icons right") arrow_drop_down
                        //- a.name(href="/dashboard") #{user.name}
   

                        //- each item in h.dashboardMenu
                        //-                 li.nav__item
                        //-                     a(class="hvr-grow-shadow color1", href=item.slug)
                        //-                         span #{item.title}
