mixin postForm()
    form.form(action="/post/create" method="POST")
        input(type="text", name="title", placeholder="Title")
        br
        input(type="text", name="categorie", placeholder="categorie")
        br
        textarea(rows="10", cols="50", name="content", placeholder="Message..")
        br
        input.button(type="submit", value="Login")